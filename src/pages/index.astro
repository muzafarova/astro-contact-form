---
import ContactForm from '../components/ContactForm.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main>
    <ContactForm />
  </main>
</Layout>

<style>
  main {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media screen and (max-width: 768px) {
    main {
      display: flex;
      align-items: start;
    }
  }
</style>
